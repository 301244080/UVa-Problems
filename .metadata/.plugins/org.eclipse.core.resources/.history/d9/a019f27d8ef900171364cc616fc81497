static int totalNode;
static ArrayList<Integer>[] adjList;
	public static void main(String[] args) throws IOException 
	{
		BufferedReader reader = new BufferedReader(new FileReader("test.txt"));
		while(true)
		{
//			StringTokenizer input = new StringTokenizer(reader.readLine());
			totalNode =Integer.parseInt(reader.readLine());
			adjList = new ArrayList[totalNode];
			for(int index=0;index<totalNode;index++)
			{
				adjList[index] = new ArrayList<Integer>();
			}
			for(int i = 0; i < totalNode - 1; i++)
			{
				StringTokenizer st = new StringTokenizer(reader.readLine());
				int u = Integer.parseInt(st.nextToken()) - 1;
				int v = Integer.parseInt(st.nextToken()) - 1;
				adjList[u].add(v); 
				adjList[v].add(u);

			}
			System.out.print(adjList);
		}

	}
}


